@using MoFang.MobileSite.Dashboard.ViewModels.Account
@model LoginViewModel
@{
    ViewData["Title"] = "登录账号";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}
<div class="wrapper-page" id="login">
    <div class="text-center">
        <a href="#" class="logo-lg"><i class="mdi mdi-radar"></i> <span>Dashboard</span> </a>
    </div>
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" id="formLogin" role="form">
        <div class="form-group row">
            <div class="col-12">
                <div class="input-group">
                    <span class="input-group-addon"><i class="mdi mdi-account"></i></span>
                    <input type="text" class="form-control" name="UserName" autocomplete="off" placeholder="请输入OA账号" required value="@Model.LoginModel.UserName">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <div class="input-group">
                    <span class="input-group-addon"><i class="mdi mdi-radar"></i></span>
                    <input type="password" class="form-control" name="PassWord" required autocomplete="off" placeholder="请输入OA密码" value="@Model.LoginModel.Password">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <div class="checkbox checkbox-primary">
                    <input id="checkbox-signup" type="checkbox" name="RememberPassword" checked="@(Model.LoginModel.RememberPassword?"checked":"")">
                    <label for="checkbox-signup">
                        记住我
                    </label>
                </div>

            </div>
        </div>
        <div class="form-group text-right m-t-20">
            <div class="col-xs-12">
                <button class="btn btn-primary btn-custom w-md waves-effect waves-light" href="#" type="button" @@click="login()">
                    登录
                </button>
            </div>
        </div>
    </form>
</div>
@section Scripts
{
    <script>
        var login = new Vue({
            el: '#login',
            data: {
                loginUrl: '/Account/Login'
            },
            methods: {
                login: function () {
                    var vm = this;
                    $.post(vm.loginUrl, $("form").serialize(), function (data) {
                        alert(data);
                        setTimeout(function () {
                            location.href = "/Home/Index";
                        },1000)
                    });
                }
            }
        });
    </script>
}
